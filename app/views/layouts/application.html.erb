<!DOCTYPE html>
<html>
<head>
  <title>RecipeApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav id="sidebar">
  <h3>Categories</h3>
    <ul id="categories">
      <% @categories.each do |category| %>
        <li><%= link_to category.name.titleize, category_path(category) %></li>
      <% end %>
    </ul>
  </nav>

  <main>
    <%= yield %>
  </main>

</body>
</html>
